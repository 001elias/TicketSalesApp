@model List<Reservation>

<h2>My Reservations</h2>

@if(Model.Count == 0)
{
    <p class="mt-5">No reservations</P>
}
else 
{
<div class="reservations game-details mt-3">
    <div class="content">
        <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-12">
                <div class="container">
                    <div class="row">
                        <div class="col-2">
                            <img src="@Url.Content($"~/images/event{item.EventId}.jpg")">
                        </div/>
                        <div class="col-6">
                            <h4> 
                                <a asp-action="Details" asp-controller="Events" asp-route-eventId="@item.EventId">@item.Event.Title</a>
                            </h4>
                            <span class="text-white">Date : @item.Event.EventDateTime</span>
                            <span class="text-info">@item.Event.Venue.Name</span>
                        </div>                        
                   
                        <div class="col-2">
                            <ul class="price-info">
                                <li class="ticket-type">@item.Ticket.Type</li>
                                <li>Quantity: @item.Quantity</li>
                                <li>Price: @item.TotalPrice CAD</li>
                                
                            </ul>
                        </div>
                         <div class="col-2">
                              <form method="post" asp-action="Cancel" asp-controller="Reservations" asp-route-reservationId="@item.ReservationId">
                                  <button class="btn btn-outline-danger cart-button text-white">
                                      <i class="fa-regular fa-trash-can me-2"></i> Cancel
                                  </button> 
                              </form>
                         </div>
                    </div>
                 </div>                
            </div>
         }           
        </div>        
    </div>
</div>
}
